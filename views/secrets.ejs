<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div class="container"> 
    <i class="fas fa-lightbulb fa-6x"></i>
    <h4 class="display-4">Here's A Treasure Of Amazing Ideas!</h4>
<div class="secrets-box">
    <% usersWithSecrets.forEach(function(user){ %>
      <div class="row">
        <div class="column col-icon"><i class="fas fa-user-circle fa-2x"></i></div>
        <div class="column col-text"><p class="secret-text"> <%=user.secret%> </p></div>
      </div>
    
    <% }); %>
  </div>
    <hr>
    
    <a class="btn btn-dark btn-lg" href="/logout" role="button">Log Out</a>
    <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit an Idea</a>
  </div>
</div>

<%- include('partials/footer') %>
